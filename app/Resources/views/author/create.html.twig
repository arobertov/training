{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-5">
             <div class="author-create">
                 {{ form_start(form) }}
                 <label class="author-create-label" for="author_name">Добави автор</label>
                 {{ form_widget(form.name) }}
                 {{ form_errors(form.name) }}
                 <div class="form-button">
                     {{ form_widget(form.save) }}
                     <a class="btn btn-default" href="{{ path('homepage') }}">Отказ</a>
                     {{ form_end(form) }}
                 </div>
             </div>
        </div>
    </div>

    <div class="container">
        <div class="col-md-7">
            <div class="list-author">
                <table class="table">
                    <thead class="thead-default">
                    <tr>
                        <th>Име</th>
                        <th>Редактирай</th>
                        <th>Изтрий</th>
                    </tr>
                    </thead>
                {% for author in authors %}
                    <tbody>
                        <tr>
                            <td>
                                {{ author.name }}
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('edit_author',{'id':author.id}) }}" >Редактирай</a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" href="{{ path('author_delete',{'id':author.id}) }}">Изтрий</a>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}